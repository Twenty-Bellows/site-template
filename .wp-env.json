{
	"core": "WordPress/WordPress",
	"port": 8888,
	"testsPort": 8889,
	"plugins": [
		"https://downloads.wordpress.org/plugin/create-block-theme.latest-stable.zip",
		"https://downloads.wordpress.org/plugin/pattern-builder.latest-stable.zip"
	],
	"themes": [
	],
        "mappings": { 
            "wp-content/plugins": "./wp-content/plugins",
            "wp-content/themes": "./wp-content/themes" 
        },
	"lifecycleScripts": {
		"afterStart": "wp-env run cli wp theme activate template-theme && wp-env run cli wp plugin activate template-plugin"
	},
	"config": {
		"WP_UPLOAD_MAX_FILESIZE": "128M",
		"WP_MEMORY_LIMIT": "256M",
		"WP_ENVIRONMENT_TYPE": "development",
		"WP_DEVELOPMENT_MODE": "all"
	}
}

